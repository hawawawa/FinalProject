
<% if current_user != nil %>
<div class="row container center-block">
  <div class="col-md-3"></div>
  <div class = "col-xs-12 col-md-6">
    <form action="/movies/new" method= "POST" class="form-group">
      <h4>Create a new Movie</h4>
      <div class="form-group">
        <label for="movie_name" class="control-label">Movie Name</label>
        <input type="text" class="form-control" name="movie_name" placeholder="Movie Name" required>
      </div>
      <div class="form-group">
        <label for="director_name" class="control-label">Director Name</label>
        <input type="text" class="form-control" name="director_name" placeholder="Director Name" required>
      </div>
      <div class="form-group">
        <label for="release_year" class="control-label">Release Year</label>
        <input type="number" class="form-control" name="release_year" placeholder="Release Year" required>
      </div>
      <div class="form-group">
        <label for="post_url" class="control-label">Poster URL</label>
        <input type="url" class="form-control" name="poster_url" placeholder="Poster URL" required>
      </div>
      <div class="form-group">
        <button type="submit" class="form-control btn btn-default">Create Movie</button>
      </div>
    </form>
  </div>
  <div class="col-md-3"></div>
</div>
<% else %>
  <div class="row container center-block">
    <div class = "col-xs-12 col-md-12">
      <div class="alert alert-danger error" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error: Please login to create movie</span>
        Please login to create movies
      </div>
    </div>
  </div>
<% end %>