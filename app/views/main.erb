<div class="row container center-block">
  <div class="col-xs-12"><h4>Recently Added Movies</h4></div>
</div>

<div class="row container center-block">
  <% if Movie.all.length > 0 %>
    <% Movie.all.order(created_at: :desc).each do |movie| %>
      <div class="col-xs-12 col-md-4">
        <a href="/movies/<%= movie.id %>">

          <img class=".img-responsive" src="<%= movie.poster_url %>" title="<%= movie.name %>" style="min-width: 300px; min-height=300px; max-width: 300px; max-height=300px;">
        </a>
      </div>
    <% end %>
  <% else %>
    <div class="col-xs-12">
      Please add some Movies
    </div>
  <%end%>
</div>

