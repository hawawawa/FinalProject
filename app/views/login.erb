<div class="container">
  <div class="row">
    <% if @error%>
      <div class="col-md-12">
        <div class="alert alert-danger error" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          <%=@error%>
        </div>
      </div>
    <%end %>
    <div class="row-fluid container center-block">
      <div class="col-md-1"></div>
      <div class="col-xs-12 col-md-4">
        <form action="/login" method= "POST" class="form-group">
          <h3>Login</h3>
            <div class="form-group">
              <label for="email" class="control-label">Email</label>
              <input type="text" class="form-control" name="email" placeholder="Email" required>
            </div>
            <div class="form-group" class="form-control">
              <label for="password" class="control-label">Password</label>
              <input type="password" class="form-control" name='password' placeholder="Password" required > 
            </div>
            <div class="form-group">
              <input type="submit" class="form-control btn btn-default" name="submit" value="Login">
            </div>          
        </form>
      </div>
      <div class="col-md-1" style="border-right: 1px solid #e7e7e7; height: 450px"></div>
      <div class="col-md-1" style="border-left: 1px solid  #e7e7e7; height: 450px"></div>
      <div class="col-xs-12 col-md-4">
        <form action="/register" method= "POST" id='register' class="form-group">
          <h3>Register</h3>
          <div class="form-group">
            <label for="username" class="control-label">Username</label>
            <input type="text" class="form-control" name="username" placeholder="Username" required>
          </div>          
<!--           <div class="form-group">
            <label for="lname" class="control-label">Last Name</label>
            <input type="text" class="form-control" name="lname" placeholder="Last Name" required>
          </div> -->
          <div class="form-group">
            <label for="email" class="control-label">Email</label>
            <input type="text" class="form-control" name="email" placeholder="Email" required>
          </div>          
          <div class="form-group">
            <label for="password" class="control-label">Password</label>
            <input type="password" class="form-control"name='password' placeholder="Password" required>
          </div>          
          <div class="form-group">
            <input type="submit" class="form-control btn btn-default" name="submit" value="Register">
          </div>          
        </form>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</div>